generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Lead {
  id        String   @id @default(cuid())
  name      String
  phone     String
  property  String?
  status    String   @default("pending")
  createdAt DateTime @default(now())

  messages Message[] @relation("LeadToMessage")
}

model Message {
  id        String    @id @default(dbgenerated("gen_random_uuid()"))
  leadId    String
  sender    String
  body      String
  createdAt DateTime? @default(now()) @db.Timestamp(6)

  lead Lead @relation("LeadToMessage", fields: [leadId], references: [id], onDelete: Cascade, onUpdate: NoAction, map: "fk_lead")
}
