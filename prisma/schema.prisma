datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Lead {
  id        String   @id @default(cuid())
  phone     String
  name      String?
  status    String   @default("new")
  messages  Message[]
}

model Message {
  id        String   @id @default(cuid())
  lead      Lead     @relation(fields: [leadId], references: [id])
  leadId    String
  sender    String   // "lead" | "bot"
  body      String
  createdAt DateTime @default(now())
}
